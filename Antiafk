--[[
    Anti-AFK Script with "Anuson Hub" Style GUI for Roblox (Lua) - Version 4
    
    ‡∏Å‡∏≤‡∏£‡∏õ‡∏£‡∏±‡∏ö‡∏õ‡∏£‡∏∏‡∏á:
    1. ‡∏≠‡∏≠‡∏Å‡πÅ‡∏ö‡∏ö GUI ‡πÉ‡∏´‡∏°‡πà‡πÉ‡∏´‡πâ‡∏°‡∏µ‡∏•‡∏±‡∏Å‡∏©‡∏ì‡∏∞‡∏Ñ‡∏•‡πâ‡∏≤‡∏¢‡∏Å‡∏±‡∏ö "Xeter Hub" ‡πÉ‡∏ô‡∏†‡∏≤‡∏û‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á (‡πÇ‡∏ó‡∏ô‡∏™‡∏µ‡πÄ‡∏Ç‡πâ‡∏°, ‡∏Ç‡∏≠‡∏ö‡∏°‡∏ô)
    2. ‡∏•‡∏ö Rainbow Border ‡∏≠‡∏≠‡∏Å ‡πÅ‡∏•‡∏∞‡∏£‡∏ß‡∏° Credit ‡πÄ‡∏Ç‡πâ‡∏≤‡πÑ‡∏õ‡πÉ‡∏ô‡∏™‡πà‡∏ß‡∏ô‡∏´‡∏±‡∏ß
    3. ‡∏Ñ‡∏á‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô Anti-AFK ‡πÅ‡∏•‡∏∞‡∏Å‡∏≤‡∏£‡πÉ‡∏ä‡πâ CoreGui ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô GUI ‡∏´‡∏≤‡∏¢‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£‡∏ï‡∏≤‡∏¢
]]

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")

local isAntiAFKEnabled = false
local interval = 60 -- ‡∏£‡∏∞‡∏¢‡∏∞‡πÄ‡∏ß‡∏•‡∏≤‡πÄ‡∏õ‡πá‡∏ô‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ‡∏£‡∏∞‡∏´‡∏ß‡πà‡∏≤‡∏á‡∏Å‡∏≤‡∏£‡∏Å‡∏£‡∏∞‡∏ó‡∏≥
local lastActionTime = 0

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£ Anti-AFK (‡∏à‡∏≥‡∏•‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏Å‡∏£‡∏∞‡πÇ‡∏î‡∏î)
local function antiAFKAction()
    if LocalPlayer and LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid") then
        local Humanoid = LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
        
        Humanoid.Jump = true
        task.wait(0.1)
        Humanoid.Jump = false
        
        lastActionTime = tick()
    end
end

-- ‡∏•‡∏π‡∏õ‡∏´‡∏•‡∏±‡∏Å‡∏ó‡∏µ‡πà‡∏ó‡∏≥‡∏á‡∏≤‡∏ô‡πÉ‡∏ô‡∏ó‡∏∏‡∏Å‡πÄ‡∏ü‡∏£‡∏° (Heartbeat) ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡πÄ‡∏ß‡∏•‡∏≤
RunService.Heartbeat:Connect(function()
    if isAntiAFKEnabled and (tick() - lastActionTime >= interval) then
        antiAFKAction()
    end
end)

-- **********************************************************************************
-- ‡∏™‡πà‡∏ß‡∏ô‡∏Ç‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏™‡∏£‡πâ‡∏≤‡∏á GUI (Xeter Hub Style)
-- **********************************************************************************

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AntiAFK_XeterStyle_GUI"
screenGui.Parent = CoreGui
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
screenGui.Enabled = true

-- Main Frame (‡∏Å‡∏£‡∏≠‡∏ö‡∏´‡∏•‡∏±‡∏Å)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 220, 0, 100)
mainFrame.Position = UDim2.new(0.5, -110, 0.1, 0) -- ‡∏à‡∏±‡∏î‡πÉ‡∏´‡πâ‡∏≠‡∏¢‡∏π‡πà‡∏î‡πâ‡∏≤‡∏ô‡∏ö‡∏ô‡∏Ñ‡πà‡∏≠‡∏ô‡πÑ‡∏õ‡∏ó‡∏≤‡∏á‡∏Å‡∏•‡∏≤‡∏á
mainFrame.BackgroundColor3 = Color3.new(0.15, 0.15, 0.15) -- ‡πÇ‡∏ó‡∏ô‡∏™‡∏µ‡πÄ‡∏Ç‡πâ‡∏°
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

-- Rounded Corners
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 8) -- ‡∏Ç‡∏≠‡∏ö‡∏°‡∏ô
corner.Parent = mainFrame

-- Header Frame (‡∏™‡πà‡∏ß‡∏ô‡∏´‡∏±‡∏ß‡∏Ñ‡∏•‡πâ‡∏≤‡∏¢ Xeter Hub)
local headerFrame = Instance.new("Frame")
headerFrame.Size = UDim2.new(1, 0, 0, 40)
headerFrame.Position = UDim2.new(0, 0, 0, 0)
headerFrame.BackgroundColor3 = Color3.new(0.2, 0.15, 0.15) -- ‡∏™‡∏µ‡πÄ‡∏Ç‡πâ‡∏°‡∏Å‡∏ß‡πà‡∏≤‡πÄ‡∏•‡πá‡∏Å‡∏ô‡πâ‡∏≠‡∏¢
headerFrame.BorderSizePixel = 0
headerFrame.Parent = mainFrame

local headerCorner = Instance.new("UICorner")
headerCorner.CornerRadius = UDim.new(0, 8)
headerCorner.Parent = headerFrame

-- Title Label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0.5, 0)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.BackgroundColor3 = Color3.new(0.2, 0.15, 0.15)
titleLabel.TextColor3 = Color3.new(1, 1, 1)
titleLabel.Text = "üíÄ Anti-AFK Hub" -- ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô‡∏´‡∏±‡∏ß‡∏Å‡∏∞‡πÇ‡∏´‡∏•‡∏Å
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextSize = 18
titleLabel.TextXAlignment = Enum.TextXAlignment.Center
titleLabel.Parent = headerFrame

-- Subtitle/Credit Label
local creditLabel = Instance.new("TextLabel")
creditLabel.Size = UDim2.new(1, 0, 0.5, 0)
creditLabel.Position = UDim2.new(0, 0, 0.5, 0)
creditLabel.BackgroundColor3 = Color3.new(0.2, 0.15, 0.15)
creditLabel.TextColor3 = Color3.new(0.8, 0.8, 0.8)
creditLabel.Text = "Credit: Anuson GH"
creditLabel.Font = Enum.Font.SourceSans
creditLabel.TextSize = 14
creditLabel.TextXAlignment = Enum.TextXAlignment.Center
creditLabel.Parent = headerFrame

-- Toggle Button (‡∏™‡πà‡∏ß‡∏ô‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏°)
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0.8, 0, 0, 40)
toggleButton.Position = UDim2.new(0.1, 0, 0.5, 0) -- ‡∏à‡∏±‡∏î‡πÉ‡∏´‡πâ‡∏≠‡∏¢‡∏π‡πà‡∏î‡πâ‡∏≤‡∏ô‡∏•‡πà‡∏≤‡∏á Header
toggleButton.BackgroundColor3 = Color3.new(0.8, 0.2, 0.2) -- ‡∏™‡∏µ‡πÅ‡∏î‡∏á (‡∏õ‡∏¥‡∏î‡∏≠‡∏¢‡∏π‡πà)
toggleButton.TextColor3 = Color3.new(1, 1, 1)
toggleButton.Text = "Status: OFF"
toggleButton.Font = Enum.Font.SourceSansBold
toggleButton.TextSize = 20
toggleButton.Parent = mainFrame

local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0, 6)
buttonCorner.Parent = toggleButton

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏™‡∏•‡∏±‡∏ö‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞ Anti-AFK
local function toggleAntiAFK()
    isAntiAFKEnabled = not isAntiAFKEnabled
    if isAntiAFKEnabled then
        toggleButton.Text = "Status: ON"
        toggleButton.BackgroundColor3 = Color3.new(0.2, 0.8, 0.2) -- ‡∏™‡∏µ‡πÄ‡∏Ç‡∏µ‡∏¢‡∏ß (‡πÄ‡∏õ‡∏¥‡∏î‡∏≠‡∏¢‡∏π‡πà)
        lastActionTime = tick() -- ‡∏ï‡∏±‡πâ‡∏á‡πÄ‡∏ß‡∏•‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡πÉ‡∏´‡∏°‡πà‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÄ‡∏õ‡∏¥‡∏î‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô
    else
        toggleButton.Text = "Status: OFF"
        toggleButton.BackgroundColor3 = Color3.new(0.8, 0.2, 0.2) -- ‡∏™‡∏µ‡πÅ‡∏î‡∏á (‡∏õ‡∏¥‡∏î‡∏≠‡∏¢‡∏π‡πà)
    end
end

-- ‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏Å‡∏±‡∏ö‡∏õ‡∏∏‡πà‡∏°
toggleButton.MouseButton1Click:Connect(toggleAntiAFK)
