local TweenService = game:GetService("TweenService")

--// สร้าง GUI เครดิตแบบเต็มหน้าจอ
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "FPSBoosterCreditGUI"
ScreenGui.Parent = game.CoreGui

local Frame = Instance.new("Frame")
Frame.Name = "CreditFrame"
Frame.Size = UDim2.new(1, 0, 1, 0) -- เต็มหน้าจอ
Frame.Position = UDim2.new(-1, 0, 0, 0) -- เริ่มต้นนอกจอทางซ้าย
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.BackgroundTransparency = 0.1 -- โปร่งใสเล็กน้อย
Frame.BorderSizePixel = 0
Frame.Parent = ScreenGui

local TextLabel = Instance.new("TextLabel")
TextLabel.Name = "CreditText"
TextLabel.Text = "FPS Booster Activated\nby anuson" -- ข้อความเครดิต
TextLabel.Size = UDim2.new(1, 0, 1, 0)
TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TextLabel.TextStrokeTransparency = 0.5
TextLabel.BackgroundTransparency = 1
TextLabel.TextScaled = true
TextLabel.Font = Enum.Font.GothamBold
TextLabel.Parent = Frame

--// เอฟเฟกต์หน้าต่างเลื่อนเข้าและออก
task.spawn(function()
    -- การตั้งค่า Tween
    local slideInInfo = TweenInfo.new(
        0.5, -- เวลา
        Enum.EasingStyle.Quad, -- สไตล์การเคลื่อนไหว
        Enum.EasingDirection.Out -- ทิศทางการเคลื่อนไหว
    )
    local slideOutInfo = TweenInfo.new(
        0.5, -- เวลา
        Enum.EasingStyle.Quad, -- สไตล์การเคลื่อนไหว
        Enum.EasingDirection.In -- ทิศทางการเคลื่อนไหว
    )

    local slideInGoal = {Position = UDim2.new(0, 0, 0, 0)} -- ตำแหน่งเต็มหน้าจอ
    local slideOutGoal = {Position = UDim2.new(1, 0, 0, 0)} -- ตำแหน่งนอกจอทางขวา

    -- เลื่อนเข้า
    local slideInTween = TweenService:Create(Frame, slideInInfo, slideInGoal)
    slideInTween:Play()
    slideInTween.Completed:Wait()

    -- รอ
    task.wait(2)

    -- เลื่อนออก
    local slideOutTween = TweenService:Create(Frame, slideOutInfo, slideOutGoal)
    slideOutTween:Play()
    slideOutTween.Completed:Wait()

    -- ทำลาย GUI
    ScreenGui:Destroy()
end)

--------------------------------------------------------------------
--                       FPS BOOSTER SAFE VERSION                 --
--------------------------------------------------------------------

local Lighting = game:GetService("Lighting")
local Terrain = workspace:FindFirstChildOfClass("Terrain")

-- ปิดแสง/เงา/เอฟเฟกต์หนัก ๆ
pcall(function()
    Lighting.GlobalShadows = false
    Lighting.Brightness = 1
    Lighting.FogEnd = 100000
    Lighting.FogStart = 0
end)

-- ปิด Effects
for _, v in pairs(Lighting:GetChildren()) do
    if v:IsA("BlurEffect") or v:IsA("SunRaysEffect")
    or v:IsA("BloomEffect") or v:IsA("ColorCorrectionEffect") then
        v.Enabled = false
    end
end

-- ลดสเปค Terrain
pcall(function()
    if Terrain then
        Terrain.WaterRefraction = 0
        Terrain.WaterWaveSize = 0
        Terrain.WaterWaveSpeed = 0
        Terrain.WaterTransparency = 1
    end
end)

-- ลดคุณภาพโมเดลทั้งหมด
local function boost(folder)
    for _, obj in pairs(folder:GetDescendants()) do
        if obj:IsA("Part") or obj:IsA("MeshPart") or obj:IsA("UnionOperation") then
            obj.Material = Enum.Material.Plastic
            obj.Reflectance = 0
        elseif obj:IsA("Decal") or obj:IsA("Texture") then
            obj.Transparency = 1
        elseif obj:IsA("ParticleEmitter") or obj:IsA("Trail") then
            obj.Enabled = false
        elseif obj:IsA("PointLight") or obj:IsA("SpotLight") or obj:IsA("SurfaceLight") then
            obj.Enabled = false
        end
    end
end

boost(workspace)

-- ตั้งค่า Quality ต่ำสุดเพื่อ FPS สูง
settings().Rendering.QualityLevel = Enum.QualityLevel.Level01

print("FPS Booster Loaded with Full-Screen Credit GUI — by anuson")
